{
    "name": "helix/clock",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Helix\\Clock\\": "src"
        },
        "files": [
            "src/polyfill.php"
        ]
    },
    "require-dev": {
        "stella-maris/clock": "^0.1",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^4.22"
    },
    "autoload-dev": {
        "psr-4": {
            "Helix\\Clock\\Tests\\": "tests"
        }
    },
    "provide": {
        "psr/clock-implementation": "^1.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
