{
    "name": "helix/helix",
    "license": "MIT",
    "type": "library",
    "description": "Helix Application",
    "homepage": "https://github.com/helix-php",
    "support": {
        "issues": "https://github.com/helix-php/helix/issues",
        "source": "https://github.com/helix-php/helix"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "role": "maintainer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "helix/framework": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4|^6.0",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^4.10",
        "jetbrains/phpstorm-attributes": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.8",
        "nyholm/psr7": "^1.5",
        "symfony/http-foundation": "^5.4|^6.0",
        "laminas/laminas-diactoros": "^2.12",
        "httpsoft/http-message": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "post-create-project-cmd": "@prepare",
        "prepare": [
            "@php do orm:schema-tool:update"
        ],
        "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
