{
    "name": "helix/helix",
    "license": "MIT",
    "type": "library",
    "description": "Helix Application",
    "homepage": "https://github.com/helix-php",
    "support": {
        "issues": "https://github.com/helix-php/helix/issues",
        "source": "https://github.com/helix-php/helix"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "role": "maintainer"
        }
    ],
    "repositories": [
        {"type": "path", "url": "libs/contracts/arrayable"},
        {"type": "path", "url": "libs/contracts/container"},
        {"type": "path", "url": "libs/contracts/memoizable"},
        {"type": "path", "url": "libs/contracts/error-handler"},
        {"type": "path", "url": "libs/contracts/error-handler-http"},
        {"type": "path", "url": "libs/contracts/event-dispatcher"},
        {"type": "path", "url": "libs/contracts/http-method"},
        {"type": "path", "url": "libs/contracts/http-status-code"},
        {"type": "path", "url": "libs/contracts/middleware"},
        {"type": "path", "url": "libs/contracts/param-resolver"},
        {"type": "path", "url": "libs/contracts/router"},
        {"type": "path", "url": "libs/contracts/view"},

        {"type": "path", "url": "libs/bridge/doctrine"},
        {"type": "path", "url": "libs/bridge/cache"},

        {"type": "path", "url": "libs/boot"},
        {"type": "path", "url": "libs/config"},
        {"type": "path", "url": "libs/container"},
        {"type": "path", "url": "libs/debug"},
        {"type": "path", "url": "libs/env"},
        {"type": "path", "url": "libs/event-dispatcher"},
        {"type": "path", "url": "libs/foundation"},
        {"type": "path", "url": "libs/foundation-http"},
        {"type": "path", "url": "libs/foundation-console"},
        {"type": "path", "url": "libs/http"},
        {"type": "path", "url": "libs/http-method"},
        {"type": "path", "url": "libs/http-status-code"},
        {"type": "path", "url": "libs/middleware"},
        {"type": "path", "url": "libs/param-resolver"},
        {"type": "path", "url": "libs/router"},
        {"type": "path", "url": "libs/router-generator"},
        {"type": "path", "url": "libs/server-sapi"},
        {"type": "path", "url": "libs/server"},
        {"type": "path", "url": "libs/view"},
        {"type": "path", "url": "libs/view-engine-php"},
        {"type": "path", "url": "libs/view-engine-twig"}
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "helix/doctrine-bridge": "^1.0",
        "helix/cache-bridge": "^1.0",

        "helix/env": "^1.0",
        "helix/foundation-http": "^1.0",
        "helix/foundation-console": "^1.0",
        "helix/view-engine-php": "^1.0",
        "helix/view-engine-twig": "^1.0",
        "helix/server-sapi": "^1.0",

        "monolog/monolog": "^2.3",
        "symfony/finder": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "phpbench/phpbench": "^1.2",
        "helix/debug": "^1.0",
        "phpunit/phpunit": "^9.5.20",
        "symfony/var-dumper": "^5.4|^6.0",
        "vimeo/psalm": "^4.10",
        "jetbrains/phpstorm-attributes": "^1.0",
        "httpsoft/http-message": "^1.0",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests",

            "Helix\\Boot\\Tests\\": "libs/boot/tests",
            "Helix\\Config\\Tests\\": "libs/config/tests",
            "Helix\\Container\\Tests\\": "libs/container/tests",
            "Helix\\Debug\\Tests\\": "libs/debug/tests",
            "Helix\\Env\\Tests\\": "libs/env/tests",
            "Helix\\EventDispatcher\\Tests\\": "libs/event-dispatcher/tests",
            "Helix\\Foundation\\Tests\\": "libs/foundation/tests",
            "Helix\\Foundation\\Console\\Tests\\": "libs/foundation-console/tests",
            "Helix\\Foundation\\Http\\Tests\\": "libs/foundation-http/tests",
            "Helix\\Http\\Tests\\": "libs/http/tests",
            "Helix\\Http\\Method\\Tests\\": "libs/http-method/tests",
            "Helix\\Http\\StatusCode\\Tests\\": "libs/http-status-code/tests",
            "Helix\\Middleware\\Tests\\": "libs/middleware/tests",
            "Helix\\ParamResolver\\Tests\\": "libs/param-resolver/tests",
            "Helix\\Router\\Tests\\": "libs/router/tests",
            "Helix\\Router\\Generator\\Tests\\": "libs/router-generator/tests",
            "Helix\\Server\\Tests\\": "libs/server/tests",
            "Helix\\Server\\Sapi\\Tests\\": "libs/server-sapi/tests",
            "Helix\\View\\Tests\\": "libs/view/tests",
            "Helix\\View\\Engine\\Php\\Tests\\": "libs/view-engine-php/tests",
            "Helix\\View\\Engine\\Twig\\Tests\\": "libs/view-engine-twig/tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "post-create-project-cmd": "@prepare",
        "prepare": [
            "@php do orm:schema-tool:update"
        ],
        "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "bench": "phpbench run tests/Bench --report=aggregate"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
