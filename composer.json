{
    "name": "helix/helix",
    "license": "MIT",
    "type": "library",
    "description": "Helix Application",
    "homepage": "https://github.com/helix-php",
    "support": {
        "issues": "https://github.com/helix-php/helix/issues",
        "source": "https://github.com/helix-php/helix"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "role": "maintainer"
        }
    ],
    "repositories": [
        {"type": "path", "url": "libs/contracts/arrayable"},
        {"type": "path", "url": "libs/contracts/container"},
        {"type": "path", "url": "libs/contracts/container-registrar"},
        {"type": "path", "url": "libs/contracts/dispatcher"},
        {"type": "path", "url": "libs/contracts/memoizable"},
        {"type": "path", "url": "libs/contracts/error-handler"},
        {"type": "path", "url": "libs/contracts/error-handler-http"},
        {"type": "path", "url": "libs/contracts/http-method"},
        {"type": "path", "url": "libs/contracts/http-status-code"},
        {"type": "path", "url": "libs/contracts/manager"},
        {"type": "path", "url": "libs/contracts/middleware"},
        {"type": "path", "url": "libs/contracts/router"},
        {"type": "path", "url": "libs/contracts/view"},

        {"type": "path", "url": "libs/boot"},
        {"type": "path", "url": "libs/config"},
        {"type": "path", "url": "libs/config-purify"},
        {"type": "path", "url": "libs/container"},
        {"type": "path", "url": "libs/debug"},
        {"type": "path", "url": "libs/env"},
        {"type": "path", "url": "libs/foundation"},
        {"type": "path", "url": "libs/foundation-http"},
        {"type": "path", "url": "libs/foundation-console"},
        {"type": "path", "url": "libs/http"},
        {"type": "path", "url": "libs/http-method"},
        {"type": "path", "url": "libs/http-status-code"},
        {"type": "path", "url": "libs/manager"},
        {"type": "path", "url": "libs/middleware"},
        {"type": "path", "url": "libs/router"},
        {"type": "path", "url": "libs/router-generator"},
        {"type": "path", "url": "libs/server-sapi"},
        {"type": "path", "url": "libs/server"},
        {"type": "path", "url": "libs/view"},
        {"type": "path", "url": "libs/view-engine-php"},
        {"type": "path", "url": "libs/view-engine-twig"}
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*",

        "helix/foundation-http": "^1.0",
        "helix/foundation-console": "^1.0",
        "helix/view-engine-php": "^1.0",
        "helix/view-engine-twig": "^1.0",
        "helix/server-sapi": "^1.0",

        "cache/array-adapter": "^1.2",
        "cache/filesystem-adapter": "^1.2",
        "monolog/monolog": "^2.3",
        "doctrine/orm": "^2.11",
        "happyr/doctrine-specification": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "helix/debug": "^1.0",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4|^6.0",
        "vimeo/psalm": "^4.10",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
